---
import LinkLabelImage from "./LinkLabelImage.astro";
import type { Media } from "../models/Media";

export interface Props {
    medias: Media[];
    title?: string;
}

const { medias } = Astro.props;
---

<article class="medias">
    {
        medias.map((media) => (
            <div class="media">
                <p class="type">{media.type}</p>
                <LinkLabelImage
                    url={media.url}
                    label={media.label}
                    src={media.src}
                    alt={media.label + "cover"}
                />
            </div>
        ))
    }
</article>

<style scoped>
    .title {
        padding-bottom: 0.5rem;
    }

    .medias {
        width: 100%;
        gap: 0.5rem;
        display: grid;
        align-items: center;
        justify-items: center;
        grid-template-columns: repeat(auto-fit, minmax(12rem, 1fr));
    }

    .media {
        width: 100%;
        display: flex;
        flex-direction: column;
    }

    .type {
        padding: 2px 0;
    }
</style>
