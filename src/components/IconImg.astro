---
import { Image } from "astro:assets";

export interface Props {
    name: string;
    disabled?: boolean;
    class: string;
}

const { name, disabled, class: classname } = Astro.props;
const src = `https://api.iconify.design/${name}.svg`;
---

<Image
    width={20}
    height={20}
    src={src}
    class:list={[{ disabled: disabled }, classname]}
    alt={name + "icon"}
/>

<style scoped lang="scss">
    img {
        width: 1.25rem;
        height: 1.25rem;
        color: var(--color);

        &.disabled {
            opacity: 0.25;
        }
    }
</style>
