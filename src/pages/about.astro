---
import LinkList from "../components/LinkList.vue";
import MediaRecent from "../components/MediaRecent.vue";
import Favorites from "../components/about/Favorites.astro";
import Main from "../layouts/Main.astro";
import { query } from "../utils";

const links = await query("aboutLinks");
const medias = await query("aboutMedia");
---

<Main>
	<div class="wrapper">
		<div class="content">
			<LinkList links={links} />
			<MediaRecent medias={medias} />
			<Favorites />
		</div>
	</div>
</Main>

<style scoped lang="scss">
	.wrapper {
		display: flex;
		flex-flow: column;
		gap: 0.5rem;
		justify-content: space-between;
		align-items: center;
		width: 100%;
	}

	.content {
		display: flex;
		flex-flow: column;
		align-items: start;
		gap: 2rem;
		opacity: 1;
		transform: translateY(0);
		transition: transform 0.3s;
	}

	.loader {
		border: 2px solid var(--bg-darker0);
		border-radius: 0.5rem;
		height: 80%;
		width: 30rem;
		height: 30rem;
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	section {
		width: 100%;
	}

	@media (min-width: 1280px) {
		.wrapper {
			flex-flow: row;
		}
	}
</style>
