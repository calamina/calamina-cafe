---
import ErrorFlower from "../components/ErrorFlower.vue";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="wrapper">
    <h1>[ 404 error ]<br /> Page not found</h1>
    <p>
      Woopsi, you shouldn't be here ...<br /> That may be my fault, or that may be
      yours :^)
    </p>
    <a href="/">Go back home !</a>
    <ErrorFlower />
    <p>Art by <span>Susie Oviatt</span></p>
  </div>
</BaseLayout>

<style scoped lang="scss">
  .wrapper {
    display: flex;
    flex-flow: column;
    gap: 0.5rem;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100vh;
  }

  h1,
  a,
  span {
    color: var(--color-error);
  }

  h1 {
    text-align: center;
  }

  a {
    text-decoration: underline;
  }

  p {
    text-align: center;
  }
</style>
