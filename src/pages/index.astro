<style scoped lang="scss">
  .box {
    // padding: 0.5rem;
    width: 100%;
    display: flex;
    flex-flow: column;
    gap: 1rem;
    padding: 0 1rem 0.5rem;
    padding-bottom: 3rem;
  }

  .wrapper {
    display: flex;
    flex-flow: column;
    gap: 0.5rem;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .content {
    display: flex;
    flex-flow: column;
    // align-items: center;
    gap: 2rem;
    opacity: 1;
    height: 100%;
    // transform: translateY(0);
    // transition: transform 0.3s;
  }

  .loader {
    border: 2px solid var(--bg-darker0);
    border-radius: 0.5rem;
    height: 80%;
    width: 30rem;
    height: 30rem;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  img {
    height: fit-content;
    width: 100%;
  }

  section {
    width: 100%;

    & img {
      // border: 2px solid var(--bg-darker0);
      padding: 1rem;
      background-color: var(--bg-darker0);
      filter: hue-rotate(265deg);
      // animation: hue 45s infinite;
      // background-color: var(--highlight);
      border-radius: 0.5rem;
    }
  }

  // @keyframes hue {
  //   0% {
  //     filter: hue-rotate(0);
  //   }
  //   100% {
  //     filter: hue-rotate(360deg);
  //   }
  // }

  @media (min-width: 1280px) {
    .box {
      padding: 0 0 3rem;
    }
    .wrapper {
      // flex-flow: row;
      display: grid;
      grid-template-columns: 1fr 30rem;
      gap: 1rem;
    }
  }
