---
import AsciiScene from "../components/AsciiScene.astro";
import MainLayout from "../layouts/MainLayout.astro";
import ProjectLast from "../components/projects/ProjectLast.astro";
// import Mimi from "../components/mimi.vue";
// import AppLogo from "../components/AppLogo.vue";
---

<MainLayout>
  <div class="wrapper">
    <div class="visual">
      <div class="intro">
        <p>Hello and welcome :)</p>
      </div>
      <AsciiScene>
        <div slot="fallback" class="loader">Loading ascii ...</div>
      </AsciiScene>
    </div>
    <div class="content">
      <ProjectLast />
      <div class="disclaimer">
        <p>Work in progress !</p>
        <p class="kao">૮ ˶ᵔ ᵕ ᵔ˶ ა</p>
      </div>
      <!-- <a href="/projects">projects</a> -->
    </div>
    <!-- {
    import.meta.env.DEV &&
    <AppLogo />
    <Mimi />
  } -->
  </div>
</MainLayout>

<style>
  .wrapper {
    padding: 2rem 0;
    gap: 1rem;
    width: 100%;
    overflow-x: hidden;
    height: fit-content;
    width: fit-content;
    display: grid;
    grid-template-columns: 1fr auto;
    place-content: center;
    align-self: center;

    @media (max-width: 1280px) {
      grid-template-columns: 1fr;
    }
  }

  .visual {
    display: flex;
    flex-flow: column;
    justify-content: center;
    gap: 0.5rem;
  }

  .content {
    display: flex;
    flex-flow: column;
    justify-content: space-between;
    height: 100%;
    gap: 1rem;
  }

  .disclaimer {
    border: 2px solid var(--bg-darker0);
    border-radius: 0.5rem;
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;

    .kao {
      transition: color 0.5s;
      letter-spacing: -4px;
    }

    &:hover .kao {
      color: var(--highlight);
    }

    @media (max-width: 1280px) {
      height: 10rem;

      .kao {
        letter-spacing: -2px;
      }
    }
  }

  .loader {
    border-radius: 0.5rem;
    width: 30rem;
    height: 30rem;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
