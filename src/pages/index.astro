---
import { Image } from "astro:assets";
import AsciiScene from "../components/AsciiScene.vue";
import LinkContact from "../components/LinkContact.vue";
import SocialsList from "../components/SocialsList.vue";
import MainLayout from "../layouts/MainLayout.astro";
import logo from "../assets/img/svg/logo.svg";
// import Ascii from "../components/ascii.astro";
// import logo2 from "../assets/img/svg/calaminaLOGO.svg";
// import logo3 from "../assets/img/svg/testmono.svg";
---

<MainLayout>
  <div class="box">
    <h1><Image src={logo} alt={"calamina logo"} loading={"eager"} /></h1>
    <!-- <Ascii /> -->
    <div class="wrapper">
      <AsciiScene client:only="vue">
        <div slot="fallback" class="loader">Loading ascii ...</div>
      </AsciiScene>
      <div class="content">
        <!-- <section>
          <h1>calamina.cafe</h1>
          <Image src={logo} alt={"calamina logo"} />
        </section> -->
        <section>
          <p>Hello and welcome :)</p>
          <p>Personal space of Gr√©goire Belliere</p>
          <p>Work in progress !</p>
        </section>
        <LinkContact />
        <SocialsList />
      </div>
    </div>
    <!-- <Ascii /> -->
  </div>
</MainLayout>

<style scoped lang="scss">
  .box {
    width: 100%;
    display: flex;
    flex-flow: column;
    gap: 1rem;
    padding: 0 0 3rem;
    padding-bottom: 3rem;
  }

  .wrapper {
    display: grid;
    grid-template-columns: 30rem 1fr;
    gap: 4rem;
    width: 100%;
  }

  .content {
    display: flex;
    flex-flow: column;
    gap: 2rem;
    opacity: 1;
    height: 100%;
  }

  .loader {
    border: 2px solid var(--bg-darker0);
    border-radius: 0.5rem;
    height: 80%;
    width: 30rem;
    height: 30rem;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  img {
    height: fit-content;
    width: 100%;
    padding: 1.25rem 0 2rem;
  }

  section {
    width: 100%;
  }

  @media (max-width: 1280px) {
    .box {
      padding: 0 1rem 0.5rem;
    }
    img {
      padding: 0;
    }
    .wrapper {
      display: flex;
      flex-flow: column;
      gap: 0.5rem;
      justify-content: space-between;
      align-items: center;
      padding-bottom: 2rem;
    }
  }

  @media (max-width: 720px) {
    .wrapper {
      align-items: start;
    }
  }
</style>
