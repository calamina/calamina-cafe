---
import { Suspense } from "vue";
import AsciiScene from "../components/AsciiScene.vue";
import LinkContact from "../components/LinkContact.vue";
import SocialsList from "../components/SocialsList.vue";
import Main from "../layouts/Main.astro";
---

<Main>
	<div
		class="tw-flex tw-flex-col tw-gap-4 tw-justify-between tw-items-center xl:tw-flex-row tw-w-full"
	>
		<!-- <div class="center"> -->
		<div class="content">
			<section>
				<h1>calamina.cafe</h1>
			</section>
			<section>
				<p>Hello and welcome :)</p>
				<p>Personal space of Gr√©goire Belliere</p>
				<p>Work in progress !</p>
			</section>
			<LinkContact />
			<SocialsList />
		</div>

		<Suspense>
			<AsciiScene client:only />
			<!-- TODO :: fix fallback ! -->
			<template #fallback>
				<div class="loader">
					<p>Loading ascii ...</p>
				</div>
			</template>
		</Suspense>
	</div>
</Main>

<style>
	.content {
		display: flex;
		flex-flow: column;
		align-items: center;
		gap: 2rem;
		opacity: 1;
		transform: translateY(0);
		transition: transform 0.3s;
	}

	.loader {
		border: 2px solid var(--bg-darker0);
		border-radius: 0.5rem;
		height: 80%;
		width: 30rem;
		height: 30rem;
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	section {
		width: 100%;
	}

	@media (max-width: 1280px) {
		nav {
			flex-flow: column;
			gap: 1rem;
		}
	}
</style>
