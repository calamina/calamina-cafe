<style>
  #container {
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100dvh;
  }

  .wrapper {
    width: 100%;
    height: calc(100dvh - 5rem);
    display: grid;
    align-items: end;
    justify-content: start;
    padding-bottom: 2.5rem;
  }

  .card {
    width: fit-content;
    height: fit-content;
    display: grid;
    background-color: var(--bg-darker0);
    gap: 3px;
    border: 0.5rem solid var(--bg);
    border-radius: 0.5rem;
    overflow: hidden;
    grid-template-areas:
      "title title title  title  title"
      "desc  desc  desc   visual visual"
      "desc2 desc2 desc2  visual visual"
      "info  info  status status mimi";
    grid-template-rows: 1fr 1fr 1fr 2rem;

    * {
      background-color: var(--bg);
      padding: 0.05rem 0.15rem;
    }
  }

  h1 {
    text-transform: capitalize;
    grid-area: title;
    font-size: 1.5rem;
    line-height: 1.5rem;
    display: grid;
    align-items: center;
  }
  .desc {
    grid-area: desc;
  }
  .desc2 {
    grid-area: desc2;
  }
  .visual {
    grid-area: visual;
    display: grid;
    grid-template-areas:
      ". . . . . ."
      ". a . . . ."
      ". . . b . ."
      ". c c c . ."
      ". . . . d ."
      ". . . . . .";
    grid-template-columns: 0.5rem repeat(4, 1fr) 0.5rem;
    grid-template-rows: 0.5rem repeat(4, 1fr) 0.5rem;
    line-height: 1rem;

    .a {
      grid-area: a;
    }
    .b {
      grid-area: b;
    }
    .c {
      grid-area: c;
    }
    .d {
      grid-area: d;
    }
  }
  .info {
    grid-area: info;
  }
  .status {
    grid-area: status;
  }
  .mimi {
    grid-area: mimi;
    display: grid;
    place-items: center;
    width: 2rem;
    height: 2rem;

    .dot {
      flex-shrink: 0;
      width: 0.4rem;
      height: 0.4rem;
      border-radius: 50%;
      background-color: var(--highlight);
    }
  }
  .info,
  .status,
  .mimi {
    font-size: 0.9rem;
    display: grid;
    align-items: center;
  }

  .small {
    font-size: 0.8rem;
    line-height: 0.8rem;
    color: var(--color-light);
  }

