---
import MainLayout from "../layouts/MainLayout.astro";
import ProjectLast from "../components/projects/ProjectLast.astro";
---

<script src="../utils/ascii"></script>

<MainLayout>
  <div id="container"></div>
  <div class="wrapper">
    <div class="intro">
      <p>Hello and welcome :)</p>
      <p>Work in progress !</p>
      <p class="kao">૮ ˶ᵔ ᵕ ᵔ˶ ა</p>
    </div>

    <p class="cta">move & click !</p>

    <div class="last">
      <ProjectLast />
    </div>
  </div>
</MainLayout>

<style>
  #container {
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100dvh;
  }

  .wrapper {
    width: 100%;
    height: calc(100dvh - 5rem);
    overflow-x: hidden;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;

    @media (max-width: 1280px) {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto auto;
    }
  }

  .intro,
  .last,
  .cta {
    width: fit-content;
    height: fit-content;
    margin-bottom: 2rem;
  }

  .cta {
    grid-row: 2;
    padding: 0.5rem 1.5rem;
    border-radius: 0.5rem;
    background-color: var(--bg);
    box-shadow: rgba(100, 100, 111, 0.08) 0px 0px 20px 0px;
    outline: 2px solid var(--bg-darker0);
    outline-offset: 4px;
    border: 2px solid var(--bg-darker0);
    width: fit-content;
    align-self: flex-end;
    font-style: oblique;
    @media (max-width: 1280px) {
      justify-self: center;
      grid-row: 3;
    }
  }

  .intro {
    display: flex;
    flex-flow: column;
    gap: 0.5rem;
    align-self: flex-end;

    p {
      padding: 0.25rem 0.5rem;
      border-radius: 0.5rem;
      background-color: var(--bg-darker0);
      width: fit-content;
    }

    &:hover .kao {
      background-color: var(--highlight);
    }
  }

  p.kao {
    padding-right: 0.75rem;
    transition: background-color 0.5s;
    letter-spacing: -4px;
    @media (max-width: 1280px) {
      letter-spacing: -2px;
    }
  }

  .last {
    grid-row: 2;
    grid-column: 2;
    padding: 0.25rem;
    border-radius: 0.5rem;
    background-color: var(--bg);
    background-color: var(--bg-darker0);
    place-self: end;
    @media (max-width: 1280px) {
      grid-column: 1;
    }
  }
</style>
